{
    "name": "good-technologies/throwables-logging",
    "description": "Helper for logging PHP throwable",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Toby Griffiths",
            "email": "toby@goodcrm.co.uk"
        }
    ],
    "prefer-stable": true,
    "require": {
        "php": "^7.3|^8.0",
        "monolog/monolog": "^2.8"
    },
    "require-dev": {
        "codeception/codeception": "^5.0",
        "codeception/module-asserts": "^3.0",
        "phpspec/phpspec": "^7.3"
    },
    "autoload": {
        "psr-4": {
            "GoodTechnologies\\Throwables\\Logging\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "spec\\GoodTechnologies\\Throwables\\Logging\\": "spec/",
            "GoodTechnologies\\Throwables\\Logging\\Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true,
        "apcu-autoloader": true
    }
}
